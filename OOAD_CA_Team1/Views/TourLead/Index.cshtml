@model OOAD_CA_Team1.ViewModels.EnquiryTourLeadViewModel

@{
    ViewBag.Title = "Enquiry Tour Lead Cost";
}

<h2>Enquiry Tour Lead Cost</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.NoOfDays)
        @Html.TextBoxFor(m => m.NoOfDays, new { @class = "form-control", @type = "number", @min = "1" })
        @Html.ValidationMessageFor(m => m.NoOfDays,"", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedTourLead)
        @Html.DropDownListFor(m => m.SelectedTourLead, Model.TourLeads, "- Select Tour Lead -", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SelectedTourLead, "", new { @style = "color:red" })
    </div>

    <button type="submit" class="btn btn-success submit">Calculate</button>
    @Html.Raw(TempData["msg"])

    <div class="form-group">
        @Html.Label($"Tour Lead Cost:  ${ViewBag.Cost}")
    </div>
}



